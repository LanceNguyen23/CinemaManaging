<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container m-5">
      <a href="/crud" class="bg-primary p-2 text-white d-inline-block mb-2"
        >Back to Create new Employee
      </a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i =0; i < data.length; i++) { %>
          <tr>
            <th scope="row"><%= data[i].employeeId %></th>
            <td><%= data[i].employeeEmail %></td>
            <td><%= data[i].employeeName %></td>
            <td><%= data[i].employeeGender %></td>
            <td><%= data[i].employeeDateOfBirth %></td>
            <td><%= data[i].employeePhone %></td>
            <td>
              <a
                href="/edit-crud?id=<%= data[i].employeeId %>"
                type="button"
                class="bg-warning p-2 text-dark"
                >Edit</a
              >
              <a
                href="/delete-crud?id=<%= data[i].employeeId %>"
                type="button"
                class="bg-danger p-2 text-dark"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
